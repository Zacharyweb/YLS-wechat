/* pages/login/index.wxss */

.lg-top {
  margin-top: -100rpx;
}

.lg-top .nickname {
  padding: 20rpx;
}

.lg-top .edit {
  color: #999;
  font-size: 12pt;
  padding: 0 0 0 20rpx;
}

.lg-top image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}

.lg-form-item {
  height: 110rpx;
  line-height: 110rpx;
  position: relative;
}

.lg-form-item::after {
  content: " ";
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border-bottom: 1px solid #d9d9d9;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
}

.lg-form-item-t {
  width: 120rpx;
  color: #999;
}

.lg-code {
  position: relative;
  z-index: 999;
  width: 190rpx;
  text-align: center;
}

.lg-code::after {
  content: " ";
  width: 200%;
  height: 100%;
  position: absolute;
  top: 30rpx;
  left: -10rpx;
  border-left: 1px solid #d9d9d9;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  box-sizing: border-box;
}

.remark {
  font-size: 9pt;
}
